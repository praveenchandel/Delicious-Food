<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_sheet_customize_full_dish_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000" />

    <RelativeLayout
        android:id="@+id/bottom_sheet_customize_relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/bottom_sheet_customize_food_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_room_service_24"/>

        <TextView
            android:id="@+id/bottom_sheet_customize_full_dish_name"
            android:layout_toEndOf="@id/bottom_sheet_customize_food_icon1"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/bottom_sheet_customize_food_delete_icon1"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/bottom_sheet_customize_full_dish_price_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bottom_sheet_customize_food_icon1"
            android:layout_marginStart="8dp"
            android:layout_below="@id/bottom_sheet_customize_full_dish_name"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/bottom_sheet_customize_food_delete_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/bottom_sheet_customize_full_dish_price_total"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_baseline_delete_forever_24"/>

        <TextView
            android:id="@+id/bottom_sheet_customize_full_dish_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="#000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_sheet_customize_relative_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/bottom_sheet_customize_food_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_room_service_24"/>

        <TextView
            android:layout_toEndOf="@id/bottom_sheet_customize_food_icon2"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/bottom_sheet_customize_food_delete_icon2"
            android:layout_marginEnd="8dp"
            android:id="@+id/bottom_sheet_customize_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/bottom_sheet_customize_dish_price_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bottom_sheet_customize_food_icon2"
            android:layout_marginStart="8dp"
            android:layout_below="@id/bottom_sheet_customize_dish_name"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/bottom_sheet_customize_food_delete_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/bottom_sheet_customize_dish_price_total"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_baseline_delete_forever_24"/>

        <TextView
            android:id="@+id/bottom_sheet_customize_dish_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="#000" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*Item already found in your cart"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/bottom_sheet_customize_make_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_shape"
        android:backgroundTint="@color/colorPrimary"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:text="Add Your New Customization"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

</LinearLayout>