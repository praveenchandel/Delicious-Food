<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#85C1E9"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/offers_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/offer_list_reward_image"
                android:layout_marginTop="16dp"
                android:textSize="15sp"
                android:text="product name"/>

            <ImageView
                android:id="@+id/offer_list_reward_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/rewards"/>

            <TextView
                android:id="@+id/offers_product_percent_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offers_product_name"
                android:layout_toLeftOf="@id/offer_list_reward_image"
                android:textStyle="bold"
                android:text="percentage off"/>

            <TextView
                android:id="@+id/offers_product_minimum_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/offers_product_percent_off"
                android:layout_toLeftOf="@id/offer_list_reward_image"
                android:textStyle="bold"
                android:textColor="#D7000000"
                android:layout_marginBottom="10dp"
                android:text="minimum purchase"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>