<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderDetailsActivity">

    <include layout="@layout/custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="50"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shipping Details"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                />

        <TextView
            android:id="@+id/order_details_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            />

            <TextView
                android:id="@+id/order_details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="address"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="number"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_utr_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UTR no."
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_applied_offer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_delivery_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delivery code"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/order_details_delivery_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delivery type"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginLeft="2dp" />

            <TextView
                android:id="@+id/order_details_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refund"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginLeft="2dp" />

            <TextView
                android:id="@+id/order_details_time_of_cancellation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Time of cancellation"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_details_paid_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="paid"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            />

        <TextView
            android:id="@+id/order_details_delivery_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delivery charge"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            />

        <TextView
            android:id="@+id/order_details_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="discount"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Orders"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center_horizontal"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_details_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Button
            android:id="@+id/order_details_cancel_order_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/side_nav_bar"
            android:text="Cancel Order"/>

    </LinearLayout>

        <TextView
            android:id="@+id/refund_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    </ScrollView>

    </LinearLayout>
